<?php

$reknidelku = "jjjjjjjjjjj";
$samohlasky = array ('a','e','i','o','u');
$vtomhlerozmezi ="";
$here = "Lorem ipsum dolor sit amet, consectetuer adipiscing elit";
$zprava = "Top secret";
$co = "X";
$kam = array ('teplota','hustota','barva','hmotnost');
$hranice = '""';
$stringveta = "Pampeliska sablon smrk";
$vtomhleretezci = "Nebe je modre a venku je hezky";
$rozmezi = 'A..Z';
$retezec = "AEIOU";
$odkudsezacne = 5;
$text = "Koho to zajima";
$cochcinahradit = "modre";
$zacatek = 10;
$veta = "Nebe je modre a venku je hezky";
$conahrazuji = "modre";
$cimnahrazuji = "zelene";
$vsechnovelke = "Co se to deje";
$vsechnomale = "Co se to deje";
$odkudhledam ="Nebe je modre a venku je hezky";
$cohledam = "modre";
$presnecohledam = "nebe";



class stringMBraun
{

    static public function substrMBraun($retezec,$odkudsezacne)
    {
        return substr($retezec, $odkudsezacne);
    }

    static public function substr_replaceMBraun($text,$cochcinahradit,$zacatek)
    {
        return substr_replace($text, $cochcinahradit, $zacatek);
    }


    static public function strtrMBraun($veta,$conahrazuji,$cimnahrazuji)
    {
        return strtr($veta, $conahrazuji, $cimnahrazuji);
    }


    static public function strtoupperMBraun($vsechnovelke)
    {
        return strtoupper($vsechnovelke);
    }


    static public function strtolowerMBraun($vsechnomale)
    {
        return strtolower($vsechnomale);
    }


    static public function strrposMBraun($odkudhledam,$cohledam)
    {
        return strrpos($odkudhledam, $cohledam);
    }

    static public function strriposMBraun($odkudhledam,$presnecohledam)
    {
        return strripos($odkudhledam, $presnecohledam);
    }

    static public function strposMBraun($odkudhledam,$cohledam)
    {
        return strpos($odkudhledam, $cohledam);
    }


    static public function strlenMBraun($reknidelku)
    {
        return strlen($reknidelku);
    }

    static public function strchrMBraun($odkudhledam,$cohledam)
    {
        return strchr($odkudhledam, $cohledam);
    }

    static public function str_replaceMBraun($samohlasky, $vtomhlerozmezi, $here)
    {
        return str_replace($samohlasky, $vtomhlerozmezi, $here);
    }


    static public function md5MBraun($zprava)
    {
        return md5($zprava);
    }


    static public function implodeMBraun($co, $kam)
    {
        return implode($co, $kam);
    }


    static public function explodeMBraun($hranice,$stringveta)
    {
        return explode($hranice, $stringveta);
    }


    static public function addcslashesMBraun($vtomhleretezci,$rozmezi)
    {
        return addcslashes($vtomhleretezci, $rozmezi);
    }


    static public function addslashMBraun($stringveta)
    {
        return addslashes($stringveta);
    }


    static public function trimMBraun($odsud,$topryc)
    {
        return trim($odsud, $topryc);
    }


    static public function ucfirstMBraun($veta)
    {
        return ucfirst($veta);
    }


    static public function ucwordsMBraun($veta)
    {
        return ucwords($veta);
    }


}


var_dump(stringMBraun::substrMBraun($retezec, $odkudsezacne));
var_dump(stringMBraun::substr_replaceMBraun($text, $cochcinahradit, $zacatek));
var_dump(stringMBraun::strtrMBraun($veta, $conahrazuji, $cimnahrazuji));
var_dump(stringMBraun::strtoupperMBraun($vsechnovelke));
var_dump(stringMBraun::strtolowerMBraun($vsechnomale));
var_dump(stringMBraun::strrposMBraun($odkudhledam, $cohledam));
var_dump(stringMBraun::strriposMBraun($odkudhledam, $presnecohledam));
var_dump(stringMBraun::strposMBraun($odkudhledam, $cohledam));
var_dump(stringMBraun::strlenMBraun($reknidelku));
var_dump(stringMBraun::strchrMBraun($odkudhledam, $cohledam));
var_dump(stringMBraun::str_replaceMBraun($samohlasky, $vtomhlerozmezi, $here));
var_dump(stringMBraun::md5MBraun($zprava));
var_dump(stringMBraun::implodeMBraun($co, $kam));
var_dump(stringMBraun::explodeMBraun($hranice, $stringveta));
var_dump(stringMBraun::addcslashesMBraun($vtomhleretezci, $rozmezi));
var_dump(stringMBraun::addslashMBraun($stringveta));
var_dump(stringMBraun::trimPMBraun($odsud, $topryc));
var_dump(stringMBraun::ucfirstMBraun($veta));
var_dump(stringMBraun::ucwordsMBraun($veta));

?>
